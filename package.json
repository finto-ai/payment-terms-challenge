{
  "name": "payment-terms-challenge",
  "version": "1.0.0",
  "description": "CLI application to extract payment terms and invoice data from markdown invoices with GPT-5.",
  "main": "dist/index.js",
  "bin": {
    "payment-terms-extractor": "dist/index.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint": "tsc --noEmit --project tsconfig.json",
    "start": "node dist/index.js",
    "dev": "ts-node --project tsconfig.json src/index.ts",
    "extract": "ts-node --project tsconfig.json src/index.ts",
    "test": "pnpm run lint"
  },
  "keywords": [
    "invoice",
    "payment-terms",
    "gpt-5",
    "openai",
    "markdown"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.5.2",
  "dependencies": {
    "dotenv": "^17.2.2",
    "openai": "^5.22.0",
    "yargs": "^18.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/yargs": "^17.0.33",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
